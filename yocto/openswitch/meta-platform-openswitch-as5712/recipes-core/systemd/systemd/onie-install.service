[Unit]
Description=Reboot
Documentation=man:systemd-halt.service(8)
DefaultDependencies=no
Requires=shutdown.target umount.target final.target
After=shutdown.target umount.target final.target

[Service]
Type=oneshot
ExecStart=/bin/mount /dev/sda4 /var/local/boot
ExecStart=/usr/sbin/grub-reboot --boot-directory=/var/local/boot ONIE
ExecStart=/bin/umount /var/local/boot
ExecStart=/bin/mkdir -p /mnt/onie-boot
ExecStart=/bin/mount /dev/sda2 /mnt/onie-boot/
ExecStart=/mnt/onie-boot/onie/tools/bin/onie-boot-mode -o install
ExecStart=/bin/umount /mnt/onie-boot
ExecStart=/bin/systemctl --force reboot

[Install]
WantedBy=onie-install.target
