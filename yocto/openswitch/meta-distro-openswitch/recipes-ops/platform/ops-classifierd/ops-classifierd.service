[Unit]
Description=OpenSwitch Classifier Daemon
After=ovsdb-server.service ops-init.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=3
ExecStartPre=/bin/rm -f /var/run/openvswitch/ops-classifier.pid
ExecStart=/sbin/ip netns exec nonet /usr/bin/ops-classifier --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/ops-classifier.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
