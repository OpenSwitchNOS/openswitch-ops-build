[Unit]
Description=OpenSwitch System Daemon (ops-sysd)
After=ovsdb-server.service ops-init.service

[Service]
Type=forking
ExecStartPre=/bin/rm -f /var/run/openvswitch/ops-sysd.pid
ExecStart=/sbin/ip netns exec nonet /usr/bin/ops-sysd --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/ops-sysd.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
