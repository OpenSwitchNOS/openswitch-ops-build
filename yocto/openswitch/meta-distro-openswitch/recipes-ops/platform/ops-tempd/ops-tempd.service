[Unit]
Description=OpenSwitch Temperature Daemon
After=ovsdb-server.service ops-init.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=3
ExecStartPre=/bin/rm -f /var/run/openvswitch/ops-tempd.pid
ExecStart=/sbin/ip netns exec nonet /usr/bin/ops-tempd --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/ops-tempd.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
