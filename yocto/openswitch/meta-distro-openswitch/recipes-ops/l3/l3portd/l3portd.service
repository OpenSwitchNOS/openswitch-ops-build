[Unit]
Description=OpenSwitch L3 Port Manager Daemon
After=ovsdb-server.service ops-init.service

[Service]
Type=forking
CPUSchedulingPolicy=rr
CPUSchedulingPriority=3
ExecStartPre=/bin/rm -f /var/run/openvswitch/l3portd.pid
ExecStart=/sbin/ip netns exec swns /usr/bin/l3portd --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/l3portd.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
