[Unit]
Description=OpenSwitch IP Applications
After=ovsdb-server.service ops-init.service

[Service]
Type=forking
ExecStartPre=/bin/rm -f /var/run/openvswitch/ops-ipapps.pid
ExecStart=/sbin/ip netns exec swns /usr/bin/ops-ipapps --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/ops-ipapps.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
