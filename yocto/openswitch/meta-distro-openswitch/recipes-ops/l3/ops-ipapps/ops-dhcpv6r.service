[Unit]
Description=OpenSwitch DHCPv6-Relay
After=ovsdb-server.service ops-init.service

[Service]
Type=forking
ExecStartPre=/bin/rm -f /var/run/openvswitch/ops-dhcpv6r.pid
ExecStart=/sbin/ip netns exec swns /usr/bin/ops-dhcpv6r --detach --pidfile -vSYSLOG:INFO
PIDFile=/var/run/openvswitch/ops-dhcpv6r.pid
Restart=on-abort

[Install]
WantedBy=multi-user.target
