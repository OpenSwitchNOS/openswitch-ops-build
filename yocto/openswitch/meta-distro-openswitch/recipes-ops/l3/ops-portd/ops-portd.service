[Unit]
Description=OpenSwitch Port Manager Daemon
After=ovsdb-server.service ops-init.service

[Service]
Type=simple
ExecStart=/sbin/ip netns exec swns /usr/bin/ops-portd -vSYSLOG:INFO
Restart=on-abort

[Install]
WantedBy=multi-user.target
