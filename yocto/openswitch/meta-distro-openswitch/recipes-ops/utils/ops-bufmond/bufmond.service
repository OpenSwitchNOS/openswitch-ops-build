[Unit]
Description=OpenSwitch Buffer monitoring Daemon
After=ovsdb-server.service ops-init.service

[Service]
Type=simple
RemainAfterExit=yes
ExecStart=/sbin/ip netns exec nonet /usr/bin/bufmond -vSYSLOG:INFO

[Install]
WantedBy=multi-user.target
